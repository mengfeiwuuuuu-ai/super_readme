{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: MyBlob",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": ["run", "--host=0.0.0.0", "--port=5000"],
            "jinja": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 直接运行",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "cwd": "${workspaceFolder}",
            "jinja": true
        }
    ]
}
